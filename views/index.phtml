    document.addEventListener('DOMContentLoaded', function () {
      // Helper function to set up input validation for a form
      function setupFormValidation(inputId, buttonId) {
        const input = document.getElementById(inputId);
        const button = document.getElementById(buttonId);

        if (!input || !button) return;

        function toggleButtonState() {
          button.disabled = !input.value.trim();
        }

        toggleButtonState();
        input.addEventListener('input', toggleButtonState);
      }

      function setupMultiInputValidation(inputIds, buttonId) {
          const inputs = inputIds.map(id => document.getElementById(id));
          const button = document.getElementById(buttonId);

          if (inputs.some(input => !input) || !button) return;

          function toggleButtonState() {
              const allFilled = inputs.every(input => input.value.trim() !== '');
              button.disabled = !allFilled;
          }

          toggleButtonState();
          inputs.forEach(input => input.addEventListener('input', toggleButtonState));
      }

      // Set up validation for all forms
      setupFormValidation('phone_input', 'btn-test-phone');
      setupFormValidation('tabian_input', 'btn-test-tabian');
      setupMultiInputValidation(['name_first', 'name_sur'], 'btn-test-name');
      setupFormValidation('nick_input', 'btn-test-nickname');
      setupFormValidation('house_input', 'btn-test-house');
    });
