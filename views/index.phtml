        target.classList.add('visible');
      }, 10);
    }

    async function fetchData(url, outputId, buttonId) {
      const outputEl = document.getElementById(outputId);
      const buttonEl = buttonId ? document.getElementById(buttonId) : null;
      let originalButtonText = '';

      if (buttonEl) {
        originalButtonText = buttonEl.innerHTML;
        buttonEl.innerHTML = 'Loading...';
        buttonEl.disabled = true;
      }
      outputEl.innerHTML = '<span style="color:var(--text-dim)">Loading...</span>';

      try {
        const res = await fetch(url);
        let data = await res.json();
        outputEl.innerHTML = syntaxHighlight(JSON.stringify(data, undefined, 2));
      } catch (e) {
        outputEl.innerHTML = `<span style="color:var(--accent)">Error: ${e.message}</span>`;
      } finally {
        if (buttonEl) {
          buttonEl.innerHTML = originalButtonText;
          buttonEl.disabled = false;
        }
      }
    }

    function syntaxHighlight(json) {
      json = json.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
      return json.replace(/("(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
        var cls = 'number';
        if (/^"/.test(match)) {
          if (/:$/.test(match)) {
            cls = 'key';
          } else {
            cls = 'string';
          }
        } else if (/true|false/.test(match)) {
          cls = 'boolean';
        } else if (/null/.test(match)) {
          cls = 'null';
        }
        return '<span class="' + cls + '">' + match + '</span>';
      });
    }

